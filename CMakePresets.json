{
	"version": 3,
	"configurePresets": [
		{
			"name": "default",
			"hidden": true,
			"generator": "Ninja",
			"cacheVariables": {
				"BUILD_TESTING": "ON"
			}
		},
		{
			"name": "x86-Debug",
			"displayName": "x86 Debug",
			"inherits": "default",
			"architecture": {
				"value": "Win32",
				"strategy": "external"
			},
			"cacheVariables": {
				"CMAKE_BUILD_TYPE": "Debug"
			}
		},
		{
			"name": "x64-Debug",
			"displayName": "x64 Debug",
			"inherits": "default",
			"architecture": {
				"value": "x64",
				"strategy": "external"
			},
			"cacheVariables": {
				"CMAKE_BUILD_TYPE": "Debug"
			}
		},
		{
			"name": "x86-Release",
			"displayName": "x86 Release",
			"inherits": "default",
			"architecture": {
				"value": "Win32",
				"strategy": "external"
			},
			"cacheVariables": {
				"CMAKE_BUILD_TYPE": "RelWithDebInfo"
			}
		},
		{
			"name": "x64-Release",
			"displayName": "x64 Release",
			"inherits": "default",
			"architecture": {
				"value": "x64",
				"strategy": "external"
			},
			"cacheVariables": {
				"CMAKE_BUILD_TYPE": "RelWithDebInfo"
			}
		}
	]
}
